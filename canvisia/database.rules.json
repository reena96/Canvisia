{
  "rules": {
    "cursors": {
      "$canvasId": {
        ".read": true,
        "$userId": {
          ".write": "$userId === auth.uid"
        }
      }
    },
    "presence": {
      "$canvasId": {
        ".read": true,
        "$userId": {
          ".write": "$userId === auth.uid"
        }
      }
    },
    "connections": {
      "$canvasId": {
        ".read": true,
        "$userId": {
          ".write": "$userId === auth.uid"
        }
      }
    },
    "live-positions": {
      "$canvasId": {
        ".read": true,
        ".write": "auth != null"
      }
    },
    "canvases": {
      "$canvasId": {
        "aiLock": {
          ".read": true,
          ".write": "auth != null"
        },
        "shapes": {
          ".read": true,
          ".write": "auth != null"
        }
      }
    }
  }
}
