rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Canvas objects (shapes)
    match /canvases/{canvasId}/objects/{objectId} {
      // Anyone can read shapes
      allow read: if true;

      // Only authenticated users can create shapes
      allow create: if request.auth != null
                    && request.resource.data.createdBy == request.auth.uid;

      // Only the creator can update their own shapes
      allow update: if request.auth != null
                    && resource.data.createdBy == request.auth.uid;

      // Only the creator can delete their own shapes
      allow delete: if request.auth != null
                    && resource.data.createdBy == request.auth.uid;
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
